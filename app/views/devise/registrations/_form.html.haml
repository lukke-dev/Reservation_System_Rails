= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: define_method }) do |f|
	= render "devise/shared/error_messages", resource: resource
	.form-group
		= f.label :name, class: 'form-label'
		= f.text_field :name, maxlength: 25, autofocus: true, class: 'form-control'
	.form-group
		= f.label :email, class: 'form-label'
		= f.text_field :email, class: 'form-control'
	.form-group
		= f.label :password, class: 'form-label'
		%i.fa-solid.fa-circle-info{ title: 'leave blank if you do not want to change it' }
		= f.password_field :password, class: 'form-control'
	.form-group
		= f.label :password_confirmation, class: 'form-label'
		= f.password_field :password_confirmation, class: 'form-control'
	.form-group
		- if resource.new_record?
			.custom-control.custom-checkbox.small
				= f.check_box :is_admin, class: 'custom-control-input'
				= f.label :is_admin, class: 'custom-control-label'
		- else
			= f.label :current_password, class: 'form-label'
			%i.fa-solid.fa-circle-info{ title: 'we need your current password to confirm your changes' }
			= f.password_field :current_password, class: 'form-control'
	.form-group
		= f.submit class: 'btn btn-outline-secondary'